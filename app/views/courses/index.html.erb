<br />

<div class="booyah-box col-10 offset-1">
  <h1 class="text-center">Learn something today</h1>
  <% if !@courses.empty? %>
    <% @courses.each do |course| %>
      <div class="row justify-content-center text-center">
        <div class="col-sm-10">
          <%= image_tag course.image.to_s, class: 'img-fluid' %>
        </div>
      </div>
      <h2 class="text-center">
        <%= link_to course.title, course_path(course) %>
      </h2>
      <br />
      <div class="row justify-content-center">
        <div class="col-sm-4 text-center mb-2">
          <%= course.description %>
        </div>
      </div>
      <div class= "row justify-content-center"> 
        <div class="col-sm-4 text-center">
        <%= link_to 'More Details...', course_path(course), class: 'btn btn-primary btn-large' %>
        </div>
      </div>
      <hr>
      <br class="clr" />
    <% end %>
  <% else %>
    <h1>There are NO COURSES</h1>
  <% end %>
</div>
